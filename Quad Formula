
/**
 * Shows the Quadratic Formula
 *
 * @Lmadan
 * @2/7
 */
import java.util.Scanner;

public class QuadraticFormula
{
    public static void main(String[] args)
    {
        Scanner in = new Scanner(System.in);
        System.out.println("Enter values for the Quadratic formula");
        System.out.print("Please enter a value for a :");
        double a = in.nextDouble();
        System.out.print("Please enter a value for b :");
        double b = in.nextDouble();
        System.out.print("Please enter a value for c :");
        double c = in.nextDouble();
        
        double answerOne = (-b + Math.sqrt((Math.pow(b,2)) - (4 * a * c)))/(2 * a);
        double answerTwo = (-b - Math.sqrt((Math.pow(b,2)) - (4 * a * c)))/(2 * a);
        
        System.out.println("First solution is:" + answerOne);
        System.out.println("Second solution is:" + answerTwo);
        
    }
}
